---
import { Icon } from "astro-icon/components";

export interface ProjectType {
  title: string;
  description: string;
  image: string;
  badge?: string;
  links: {
    text: string;
    url: string;
  }[];
  color?: string;
}

export interface Props {
  project: ProjectType;
}

const { project } = Astro.props as Props;
---

<div
  data-visible-in-the-view="false"
  class={`group overflow-hidden rounded-lg border border-[#C3CAD4] bg-white transition-all duration-300 hover:border-[var(--project-color)] hover:shadow-lg data-[visible-in-the-view=true]:motion-preset-slide-up data-[visible-in-the-view=true]:motion-delay-[100ms]`}
  style={`--project-color: ${project.color || "#7CB4FE"}`}
>
  <div class="relative px-4 py-1 text-[20px]">
    <div
      class="absolute inset-0 px-4 py-1 text-[20px] opacity-60 transition-colors duration-300 group-hover:text-[var(--project-color)]"
    >
    </div>
    <span class="relative z-10 text-neutral-dark-20/50">{">_"}</span>
  </div>
  <div class="flex flex-col items-start p-2 md:p-6">
    <div class="flex w-full items-center justify-center p-4">
      <img
        src={project.image}
        alt={project.title}
        class="max-h-[200px] w-full rounded-md object-contain"
        loading="lazy"
      />
    </div>

    <div class="flex-1 pt-0 md:pt-8">
      <div class="mb-2 flex items-start text-[#1A1C1E]/80">
        <h3 class="font-regular text-3xl md:text-4xl">{project.title}</h3>
        {
          project.badge && (
            <span class="bg-primary-light/50 text-primary ml-3 rounded-full bg-slate-300/50 px-2 py-1 text-xs font-semibold">
              {project.badge}
            </span>
          )
        }
      </div>
      <div class="flex items-start">
        <svg
          class="mt-1 h-3"
          viewBox="0 0 20 18"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M0.4 -9.53674e-07H1.6V16.4H7.2V17.6H0.4V-9.53674e-07ZM6.79219 17.6V16.4H19.1922V17.6H6.79219Z"
            fill="#292D33"></path>
        </svg>
        <div class="flex-1 pl-0.5 md:pl-1">
          <p class="mb-4 text-base text-neutral-dark-20/80">
            {project.description}
          </p>
          <ul class="">
            {
              project.links.map(link => (
                <li>
                  <a
                    href={link.url}
                    class="flex items-center gap-1 py-1 text-base font-bold text-gray-800/80 underline underline-offset-4"
                  >
                    {link.text}
                    <Icon name="external-link-styled" class="h-4 w-4" />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
